<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/luckdrawkuang_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/btn_luck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/luck_btn" />

                <TextView
                    android:id="@+id/tvv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/btn_luck"
                    android:layout_below="@+id/btn_luck"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/lattice"
                    android:gravity="center"
                    android:text="积分6"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_luck"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/tvv6"
                    android:background="@drawable/lattice"
                    android:gravity="center"
                    android:text="积分5"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_luck"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_toLeftOf="@+id/tvv6"
                    android:background="@drawable/lattice"
                    android:gravity="center"
                    android:text="积分7"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvv8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/btn_luck"
                    android:layout_marginRight="4dp"
                    android:layout_toLeftOf="@+id/btn_luck"
                    android:background="@drawable/lattice"
                    android:gravity="center"
                    android:text="积分8"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/btn_luck"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@+id/btn_luck"
                    android:background="@drawable/lattice"
                    android:gravity="center"
                    android:text="积分4"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/btn_luck"
                    android:layout_alignLeft="@+id/btn_luck"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/lattice"
                    android:gravity="center"
                    android:text="积分2"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvv2"
                    android:layout_marginLeft="6dp"
                    android:layout_toRightOf="@+id/tvv2"
                    android:background="@drawable/lattice"
                    android:gravity="center"
                    android:text="积分3"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvv2"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tvv2"
                    android:background="@drawable/lattice"
                    android:gravity="center"
                    android:text="积分1"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/description_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="活动说明"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:text="1.首次关注公众号可获得一次抽奖机会；"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="2.首次购物完成支付可再次获得抽奖机会；"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="3.分享给朋友可再次获得抽奖机会；"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="4.稳当商城对本次活动拥有最终解释权。"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>