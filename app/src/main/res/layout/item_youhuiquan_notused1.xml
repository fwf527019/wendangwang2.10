<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_youhuiquan_relayout"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@drawable/yhq_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:background="@drawable/yhq_right"
                android:layout_height="wrap_content"
                android:layout_weight="1">


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lll2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:text="¥"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px34" />

                <TextView
                    android:id="@+id/youhuiquannotused_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/youhuiquannotused_item_tv1"
                    android:text="null"
                    android:textColor="@color/white"
                    android:textSize="28sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/youhuiquannotused_item_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:text="满null元使用"
                android:textColor="@color/white"
                android:textSize="@dimen/px26" />
        </LinearLayout>

        <TextView
            android:id="@+id/youhuiquannotused_item_youxiaoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lll2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="有效期:"
            android:textColor="@color/white"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/youhuiquannotused_item_usetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/youhuiquannotused_item_youxiaoqi"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/youhuiquannotused_item_youxiaoqi"
            android:text="null至null"
            android:textColor="@color/white"
            android:textSize="@dimen/px26" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/lll2"
            android:background="@color/white"></View>

        <TextView
            android:id="@+id/youhuiquannotused_item_limit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youhuiquannotused_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/uesit"
            android:layout_toRightOf="@+id/view"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/uesit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/px32" />

        <TextView
            android:id="@+id/youhuiquannotused_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/uesit"
            android:layout_toRightOf="@+id/view"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="null"
            android:textColor="@color/white"
            android:textSize="@dimen/px32" />

        <TextView
            android:id="@+id/youhuiquannotused_item_classfay"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youhuiquannotused_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/uesit"
            android:layout_toRightOf="@+id/view"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/px32" />


        <LinearLayout
            android:id="@+id/ll_why"
            android:layout_marginBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/gry"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/tv_why"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="不能使用原因"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>