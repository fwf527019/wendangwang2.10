                        android:id="@+id/gooddetias_hour"
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="7dp"
                        android:background="@drawable/kuang"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/px26" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/gooddetail_minut"
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/kuang"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/px26" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/gooddetail_second"
                        android:layout_width="30dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="2dp"
                        android:background="@drawable/kuang"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/px26" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"></View>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/more_icon"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginRight="65dp"
                    android:background="@color/whites">

                </View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/goodsdetai_activity_type2"
                        android:layout_width="40dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="65dp"
                        android:background="@drawable/rategkuang"
                        android:gravity="center"
                        android:text="限购"
                        android:textColor="@color/maincolor" />


                    <TextView
                        android:id="@+id/goodsdetai_activity2"
                        style="@style/text_black_26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="无" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="用户评价"
                    android:textColor="@color/gry"
                    android:textSize="@dimen/px28" />

                <TextView
                    android:id="@+id/goodsdetai_pingjianum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/gry"
                    android:textSize="@dimen/px28" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/eva_content_relay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/fgoodevaluat_userhead"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="10dp"
                    fresco:actualImageScaleType="centerCrop"
                    fresco:placeholderImage="@drawable/header"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="true" />

                <TextView
                    android:id="@+id/fgoodevaluat_userphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/fgoodevaluat_userhead"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px28" />

                <TextView
                    android:id="@+id/fgoodevaluat_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fgoodevaluat_userhead"
                    android:layout_margin="10dp"
                    android:maxLines="1"
                    android:text="14454"
                    android:textColor="@color/gry"
                    android:textSize="@dimen/px26" />

                <LinearLayout
                    android:id="@+id/fgoodevaluat_img_ll"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/fgoodevaluat_content"
                    android:orientation="horizontal"
                    android:visibility="gone"></LinearLayout>

                <RatingBar
                    android:id="@+id/fgoodevaluat_ratingbar"
                    style="@style/StarRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fgoodevaluat_img_ll"
                    android:layout_margin="10dp"
                    android:clickable="false"
                    android:isIndicator="true" />

                <TextView
                    android:id="@+id/fgoodevaluat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/fgoodevaluat_ratingbar"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    android:textColor="@color/gry"
                    android:textSize="@dimen/px24" />

                <View
                    android:id="@+id/fgoodevaluat_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/fgoodevaluat_time"
                    android:layout_margin="10dp"
                    android:background="@color/f6"></View>
            </RelativeLayout>

            <TextView
                android:id="@+id/no_evaluate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:text="暂无评价"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/goodsdetai_moreevaluate"
                    style="@style/text_gry_26"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/kuang_oval"
                    android:gravity="center"
                    android:text="查看更多评论>" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/good_detail_brand"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/goodsdetai_pinpai_img"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goodsdetai_pinpai_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="品牌名称"
                        android:textColor="@color/black"
                        android:textSize="@dimen/px32" />

                    <TextView
                        android:id="@+id/goodsdetai_pinpai_zaishou"
                        style="@style/text_gry_26"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:text="件商品在售" />
                </LinearLayout>

                <TextView
                    android:id="@+id/goodsdetai_pinpai_xaioliang"
                    style="@style/text_gry_26"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="50dp"
                    android:gravity="bottom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/good_detail_gotobrand"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="@color/white"
                android:gravity="center">

                <TextView
                    android:id="@+id/goodsdetai_gotopingpai"
                    style="@style/text_gry_26"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/kuang_oval"
                    android:gravity="center"
                    android:text="进入品牌" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="0.5dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="热卖推荐"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px28" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/goodsdetai_remaituijianlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:orientation="horizontal">-->

            <!--<ImageView-->
            <!--android:layout_width="20dp"-->
