<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/item_youhuiquan_relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/coupon">

        <LinearLayout
            android:gravity="center"
            android:id="@+id/lll2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px34"
                    android:textColor="@color/gry"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:text="¥"
                    />

                <TextView
                    android:id="@+id/youhuiquannotused_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/youhuiquannotused_item_tv1"
                    android:text="null"
                    android:textColor="@color/white"
                    android:textSize="28sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/youhuiquannotused_item_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll1"
                android:text="满null元使用"
                android:textColor="@color/white"
                android:textSize="@dimen/px26" />
        </LinearLayout>

        <TextView
            android:id="@+id/youhuiquannotused_item_youxiaoqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lll2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="有效期:"
            android:textColor="@color/white"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/youhuiquannotused_item_usetime"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/youhuiquannotused_item_youxiaoqi"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/youhuiquannotused_item_youxiaoqi"
            android:text="null至null"
            android:textColor="@color/white"
            android:textSize="@dimen/px26" />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/lll2"
            android:background="@color/white"></View>

        <TextView
            android:id="@+id/youhuiquannotused_item_limit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youhuiquannotused_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginRight="50dp"
            android:layout_toRightOf="@+id/view"
            android:layout_toLeftOf="@+id/uesit"
            android:textColor="@color/white"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/uesit"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="立即使用"
            android:textColor="@color/white"
            android:textSize="@dimen/px32"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/youhuiquannotused_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/uesit"
            android:layout_marginRight="40dp"
            android:text="null"
            android:textColor="@color/white"
            android:textSize="@dimen/px32"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/view"
           />
        <TextView
            android:id="@+id/youhuiquannotused_item_classfay"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youhuiquannotused_name"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/uesit"
            android:layout_marginRight="40dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/px32"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/view"
           />


    </RelativeLayout>

</LinearLayout>