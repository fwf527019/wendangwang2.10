<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <include layout="@layout/top_no_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/fogetpaw_phonenum_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColorHint="@color/greys"
            android:hint="请输入手机号码"
            android:textSize="@dimen/sixteen" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greys">

    </View>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/forgetpaw_phoncode_edt"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="10sp"
            android:hint="短信验证码"
            android:background="@null"
            android:textColorHint="@color/greys"
            android:textSize="@dimen/sixteen" />

        <TextView
            android:id="@+id/forget_sendcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="发送验证码"
            android:layout_marginRight="10dp"
            android:textColor="@color/base_top" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greys">

    </View>

    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/fogetpaw_newpasw_edt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@null"
        android:inputType="textPassword"
        android:hint="请输入6-20位密码"
       android:textColorHint="@color/greys"
        android:textSize="@dimen/sixteen" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greys">

    </View>

    <Button
        android:id="@+id/forget_ok_btn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_bgs"
        android:text="确    认"
        android:textColor="#fff"
        android:textSize="@dimen/px34" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/forget_rememb_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="我想起了密码，去登陆"
            android:textColor="@color/base_top"
            android:textSize="@dimen/sixteen" />

    </LinearLayout>


</LinearLayout>