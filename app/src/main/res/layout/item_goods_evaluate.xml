<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/evaluate_goods_fr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/goods_evaluat_imgview"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_gravity="center"
                android:layout_margin="10dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/goods_evaluat_titel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/evaluate_goods_fr"
            android:text="标题"
            android:textColor="@color/titel_goods"
            android:textSize="@dimen/px30px"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/ralprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/goods_evaluat_titel_tv"
            android:layout_below="@+id/goods_evaluat_titel_tv"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_bg"
            android:textSize="@dimen/px28" />


        <Button
            android:id="@+id/goods_evaluat_btn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/evaluate_goods_fr"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/home_btn_bg"
            android:text="立即评价"
            android:textColor="#fff"
            android:textSize="@dimen/px26" />
    </RelativeLayout>


</LinearLayout>