<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/logn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:background="@drawable/back_icon" />
    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:background="@drawable/logo" />


    <EditText
        android:id="@id/phone_edt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:hint="请输入手机号码"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="@color/colorhint"
        android:textSize="@dimen/px32" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greys">

    </View>


    <EditText
        android:id="@id/pasw_edt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:background="@null"
        android:hint="请输入登录密码"
        android:inputType="textPassword"
        android:textColorHint="@color/colorhint"
        android:textSize="@dimen/px32" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/greys">

    </View>

    <Button
        android:id="@id/logn_bt"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bgs"
        android:text="登    录"
        android:textColor="#ffffff"
        android:textSize="@dimen/sixteen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@id/regest_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="注册账号"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/px30" />

        <TextView
            android:id="@id/fast_logn_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="短信快捷登录"
            android:textColor="@color/gry"
            android:textSize="@dimen/px30" />


        <TextView
            android:id="@id/fogetpasw_tv"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="忘记密码?"
            android:textColor="@color/gry"
            android:textSize="@dimen/px30" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/gry">

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="其他方式登录"
            android:textColor="@color/greys"
            android:textSize="@dimen/px26" />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/greys">

        </View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="27dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@id/qq_logn"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/qq" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/weichat_logn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/wechart" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/weobo_logn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/sina" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>