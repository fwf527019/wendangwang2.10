<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/f6"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/buyagain_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="订单中所有未下架的品种都将会加入到购物车，价格可能有波动。是否继续"
            android:textSize="@dimen/px28" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/greys"></View>

    <LinearLayout
        android:id="@+id/byagain_no"
        android:background="@color/f6"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="再考虑一下"
            android:textColor="@color/red"
            android:textSize="@dimen/px28"
            android:gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/whites"></View>
    <LinearLayout
        android:gravity="center"
        android:background="@color/f6"
        android:id="@+id/byagain_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="@color/ysf_blue_5092e1"
            android:textSize="@dimen/px28"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>