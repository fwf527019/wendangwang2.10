<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="订单号："
            android:textColor="@color/black"
            android:textSize="@dimen/px28" />

        <TextView
            android:id="@+id/orderlist_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00000000000"
            android:textColor="@color/black"
            android:textSize="@dimen/px28" />

        <TextView
            android:id="@+id/orderlist_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="订单状态"
            android:textColor="@color/maincolor"
            android:textSize="@dimen/px28" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="交易时间："
            android:textColor="@color/gry"
            android:textSize="@dimen/px24" />

        <TextView
            android:id="@+id/orderlist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00-00-00 00:00:00"
            android:textColor="@color/gry"
            android:textSize="@dimen/px24" />
    </LinearLayout>

    <hb.xnwdw.com.wendangwang.gui.view.WarpLinearLayout
        android:id="@+id/myorder_img_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        app:grivate="left"
        app:horizontal_Space="10dp"
        app:isFull="false"></hb.xnwdw.com.wendangwang.gui.view.WarpLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/f5"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/order_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:text="共0件商品 合计：0.00(含运费0.00)"
            android:textColor="#2b3541"
            android:textSize="@dimen/px28" />

    </LinearLayout>


    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"></View>

            <Button
                android:id="@+id/myorder_all_btn_1"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang_oval"
                android:text="取消订单"
                android:textColor="@color/black"
                android:textSize="@dimen/px28"
                android:visibility="gone" />

            <Button
                android:id="@+id/myorder_all_btn_2"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang_ovals_mainc"
                android:text="立即支付"
                android:textColor="@color/white"
                android:textSize="@dimen/px28"
                android:visibility="gone" />

            <Button
                android:id="@+id/myorder_all_btn_3"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang_oval"
                android:text="删除订单"
                android:textColor="@color/black"
                android:textSize="@dimen/px28"
                android:visibility="gone" />

            <Button
                android:id="@+id/myorder_all_btn_4"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang_oval"
                android:text="再次购买"
                android:textColor="@color/black"
                android:textSize="@dimen/px28"
                android:visibility="gone" />

            <Button
                android:id="@+id/myorder_all_btn_5"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang_oval"
                android:text="申请退款"
                android:textColor="@color/black"
                android:textSize="@dimen/px28"
                android:visibility="gone" />

            <Button
                android:id="@+id/myorder_all_btn_6"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang_oval"
                android:text="查看物流"
                android:textColor="@color/black"
                android:textSize="@dimen/px28"
                android:visibility="gone" />

            <Button
                android:id="@+id/myorder_all_btn_7"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang_oval"
                android:text="确认收货"
                android:textColor="@color/black"
                android:textSize="@dimen/px28"
                android:visibility="gone" />

            <Button
                android:id="@+id/myorder_all_btn_8"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang_oval"
                android:text="立即评价"
                android:textColor="@color/black"
                android:textSize="@dimen/px28"
                android:visibility="gone" />

            <Button
                android:id="@+id/myorder_all_btn_9"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang_oval"
                android:text="申请售后"
                android:textColor="@color/black"
                android:textSize="@dimen/px28"
                android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>