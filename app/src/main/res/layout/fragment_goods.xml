                        android:textColor="@color/gry"
                        android:textSize="@dimen/px20" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/gooddetail_notread_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/ic_notice_bg"
                        android:gravity="center"

                        android:textColor="@color/white"
                        android:textSize="8sp" />

                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gooddetai_goto_shopingcar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/line_kuang"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/gooddetai_goto_shopingcar_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ico_cart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="购物车"
                            android:textColor="@color/gry"
                            android:textSize="@dimen/px20" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/gooddetail_car_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="@drawable/ic_notice_bg"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:visibility="gone" />

                </FrameLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/gooddetai_addcar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#FFFFBD8C"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/maincolor" />

            <TextView
                android:id="@+id/gooddetai_buynow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@drawable/jiesuan_btnbg"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white" />
        </LinearLayout>
