<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="147dp">

        <FrameLayout
            android:id="@+id/goods_fr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/commendeyou_imgview"
                fresco:placeholderImage="@drawable/defalt_pic"
                android:layout_width="117dp"
                android:layout_height="117dp"
                fresco:placeholderImageScaleType="fitXY"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/commendeyou_activitflag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/biaoqian1_bg"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/px20" />

            <ImageView
                android:id="@+id/commend_newuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/newuser"
                android:layout_gravity="end"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/commendeyou_titel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/goods_fr"
            android:text="标题"
            android:maxLines="1"
            android:textColor="@color/titel_goods"
            android:textSize="@dimen/px30px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_tv"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/commendeyou_titel_tv"
            android:layout_below="@+id/commendeyou_titel_tv"
            android:textColor="@color/gry"
            android:textSize="@dimen/px24" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_fr"
            android:layout_alignLeft="@+id/commendeyou_titel_tv"
            android:text="¥"
            android:textColor="#ff0000"
            android:textSize="@dimen/px26" />

        <TextView
            android:id="@+id/commendeyou_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goods_fr"
            android:layout_toRightOf="@+id/textView2"
            android:textColor="#ff0000"
            android:textSize="@dimen/px28" />

        <Button
            android:id="@+id/commendeyou_btn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/goods_fr"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/home_btn_bg"
            android:text="立即抢购"
            android:textColor="#fff"
            android:textSize="@dimen/px26" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/f6"
        ></View>
</LinearLayout>