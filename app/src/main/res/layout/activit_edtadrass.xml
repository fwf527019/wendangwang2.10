<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:clipToPadding="false"
        android:fitsSystemWindows="false">

        <ImageView
            android:id="@+id/edtadrasse_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/edtadrasse_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="标题"
            android:textColor="@color/black"
            android:textSize="@dimen/px34" />

        <TextView
            android:id="@+id/edtadrasse_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="完成"
            android:textColor="@color/black"
            android:textSize="@dimen/px32" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_gry_26"
            android:text="收货人："
            />
        <EditText
            android:id="@+id/edtadrasse_name"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:hint="姓名"
            android:background="@null"
            style="@style/text_black_26"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_gry_26"
            android:text="手机号："
            />
        <EditText
            android:background="@null"
            android:id="@+id/edtadrasse_phone_edt"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:hint="手机号码"
            style="@style/text_black_26"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edtadrasse_choosadraess"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_gry_26"
            android:text="省市区："
            />
        <TextView
            android:id="@+id/edtadrasse_provenc"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:text="省"
            style="@style/text_black_26"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/edtadrasse_city"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:text="市"
            style="@style/text_black_26"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/edtadrasse_county"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:text="区"
            style="@style/text_black_26"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_gry_26"
            android:text="详细地址："
            />
        <EditText
            android:background="@null"
            android:id="@+id/detail_adrassee"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:hint="填写收货人的详细地址"
            style="@style/text_black_26"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px28"
            android:textColor="@color/black"
            android:text="设为默认地址"
            />
        <CheckBox
            android:id="@+id/edtadrasse_setmoren"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:checked="true"
            android:layout_height="wrap_content"
            style="@style/toggle_style"
            />
    </LinearLayout>


</LinearLayout>